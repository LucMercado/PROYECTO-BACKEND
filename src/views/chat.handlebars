<div>
    <h1>CHAT</h1>
    <!-- Generamos un campo de texto con id user para cargar el email del usuario -->
    <div style="display: flex; flex-direction: column; align-items: start;">
    <input type="email" name="user" id="user" placeholder="Email de usuario" style="width: 200px;">
    <!-- Generamos un campo de texto con id message para cargar texto de nuevos mensajes -->
    <input type="text" name="message" id="message" placeholder="Mensaje" style="width: 260px; height: 150px;">
    <!-- Al hacer click en este botón, llamamos a la función sendMessage() -->
    <button onClick="sendMessage()">Enviar</button>
    </div>
    <!-- Este párrafo contendrá el listado de mensajes que hay en el chat hasta el momento -->
    <p id="received_messages"></p>
    
</div>

<!-- Agregamos sweetalert para tener ventanas emergentes visualmente más atractivas -->
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11.9.0/dist/sweetalert2.all.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<!-- Colocamos el código del cliente de socket.io en un archivo separado, para más orden -->
<script src="/static/js/chat.js"></script>