<style>
    .restore-container {
        max-width: 360px;
        margin: auto;
        margin-top: 64px;
    }
</style>

<div class="restore-container">
    <h1><b>HYM MATERIALES</b></h1>
    <h2>Restaurar contraseña</h2>

    <form action="/api/sessions/restore" method="post" style="margin-top: 32px;">

        <input type="hidden" name="token" value="{{token}}">

        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <span class="input-group-text" id="group2"><i class="fa-solid fa-lock"></i></span>
            <input type="password" name="newPassword" class="form-control" placeholder="Nueva contraseña" required="required">
        </div>

        {{#if msg}}
        <div style="margin-top: 24px;">
            <div class="alert alert-danger" role="alert">{{msg}}</div>
        </div>
        {{/if}}
        
        <button type="submit" class="btn btn-success">Restaurar</button>
        
    </form>

    <div style="margin-top: 15px;" >
        <a href="/login">Volver a login</a>
    </div>

</div>